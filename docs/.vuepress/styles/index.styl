body
  font-family: Avenir,Chinese Quote,PingFang SC,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;-webkit-font-smoothing: antialiased;

{$contentClass}
  pre, pre[class*="language-"]
    line-height 1.4
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    background-color $codeBgColor
    border-radius 6px
    overflow auto
    code
      color #476582 !important
      padding 0
      background-color transparent
      border-radius 0


.description
  code
    color: #5e6d82 !important;
    background-color: #e6effb !important;
    margin: 0 4px;
    display: inline-block;
    border: 1px solid #eaeefb;
    padding: 1px 5px;
    font-size: 12px;
    border-radius: 3px;
    height: 18px;
    line-height: 18px;




table[class*="api-container"]
  display:table;
  font-size: 14px;
  line-height: 1.5;
  border-width: 0;
  margin: 2em 0;
  border-collapse: collapse;
  border-spacing: 0;
  empty-cells: show;
  width: 100% !important;

  th
    padding: 14px 16px;
    border-width: 0 0 2px 0;
    border-color: #e8e8e8;
    white-space: nowrap;
    color: #5c6b77;
    font-weight: 500;
    background: rgba(0, 0, 0, 0.02);

  td:first-child
    font-weight: 500;
    width: 20%;
    color: #003a8c;


  td:nth-child(3)
    width: 22%;
    font-size: 13px;
    color: #c41d7f;
    word-break: break-all;

  td:last-child
    width: 13%;
    font-size: 13px;
  td
    padding: 14px 16px;
    border-width: 1px 0;
    border-color: #e8e8e8;
